pipeline {
    agent {
    node {
        label 'built-in'
        customWorkspace '/home/ec2-user'
    }
}
    parameters {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Whom should I say hello to?')

        text(name: 'BIOGRAPHY', defaultValue: '', description: 'Enter some information about the person')

        booleanParam(name: 'TOGGLE', defaultValue: true, description: 'Toggle this value')

        choice(name: 'CHOICE', choices: ['One', 'Two', 'Three'], description: 'Pick something')

        password(name: 'PASSWORD', defaultValue: 'SECRET', description: 'Enter a password')
    }

    stages {
        stage('checkout') {
            steps {
		sh '''
            git clone https://github.com/Dee601/game-of-life.git
	   cd game-of-life
		'''		
            }
        }
		stage('build') {
            steps {
                
            sh '''
		cd /home/ec2-user/game-of-life
		mvn clean install
		''' 

            }
        }
        stage('Deploy') {
            steps {
            sh ' cp game-of-life/gameoflife-web/target/gameoflife.war  /mnt/apache-tomcat-9.0.80/webapps ' 
			
            }
        }		

    }
}
